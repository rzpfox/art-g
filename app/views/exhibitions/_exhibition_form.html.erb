<%= simple_form_for exhibition do |f| %>
  <%= f.input :title, class: "name-box" %>
  <%= f.input :location, class: "contact-name-box" %>
  <%= f.input :dates, class: "address-box" %>
  <%= f.input :description, class: "phone-number-box" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit mode, class: "btn btn-primary" %>
<% end %>
