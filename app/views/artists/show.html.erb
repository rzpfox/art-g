<div class="artist">
  <div class = "artist-info">
  <h1 class = 'artist-photo'><%= cl_image_tag @artist.photo, class: "artist-photograph" %></h1>

    <h2 class = 'artist-name'><%= @artist.name.capitalize %></h2>

    <p class = "artist-bio"><%= @artist.bio %><p>
    <p class = 'artist-edit-destroy'>
      <% if policy(@artist).edit? %>
        <%= link_to "Make Changes to this artist",edit_artist_path(@artist), class: "btn btn-primary btn-m" %>
      <% end %>
      <% if policy(@artist).destroy? %>
        <p><%= link_to "Delist this artist", artist_path(@artist),method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-m"%></p>
      <% end %>
  </div>
  <div class="container artist-photo">
    <div class="row">
      <% @paintings.each do |painting| %>
        <%= link_to painting_path(painting) do %>
          <div class="col-xs-12, col-sm-6, col-md-6">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path painting.photo %>');">
              <div class="card-category">
                <p id='painting-title-upcase'><%= painting.title.upcase %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
