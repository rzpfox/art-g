<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for [@artist] do |f| %>
        <%= f.input :name, class: "name-box" %>
        <%= f.input :bio, class: "contact-name-box" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add Artist", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
