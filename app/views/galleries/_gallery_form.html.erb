<%= simple_form_for gallery do |f| %>
  <%= f.input :name, class: "name-box" %>
  <%= f.input :contact_name, class: "contact-name-box" %>
  <%= f.input :address, class: "address-box" %>
  <%= f.input :phone_number, class: "phone-number-box" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit mode, class: "btn btn-primary" %>
<% end %>